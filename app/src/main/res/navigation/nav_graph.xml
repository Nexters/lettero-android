<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/introFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.nexters.lettero.presentation.main.fragment.MainFragment"
        android:label="fragment_main"
        tools:layout="@layout/fragment_main">
        <action
            android:id="@+id/action_mainFragment_to_readSmsFragment"
            app:destination="@id/readSmsFragment" />
        <action
            android:id="@+id/action_mainFragment_to_sendSmsFragment"
            app:destination="@id/sendSmsFragment" />
        <action
            android:id="@+id/action_mainFragment_to_settingFragment"
            app:destination="@id/settingFragment" />
    </fragment>
    <fragment
        android:id="@+id/introFragment"
        android:name="com.nexters.lettero.presentation.intro.fragment.IntroFragment"
        android:label="fragment_intro"
        tools:layout="@layout/fragment_intro">
        <action
            android:id="@+id/action_introFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/introFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_introFragment_to_mainFragment"
            app:destination="@id/mainFragment"
            app:popUpTo="@id/introFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.nexters.lettero.presentation.login.fragment.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_loginFragment_to_mainFragment"
            app:destination="@id/mainFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_loginFragment_to_phoneAuthFragment"
            app:destination="@id/phoneAuthFragment" />
    </fragment>
    <fragment
        android:id="@+id/sendSmsFragment"
        android:name="com.nexters.lettero.presentation.sms.fragment.SendSmsFragment"
        android:label="fragment_send_Sms"
        tools:layout="@layout/fragment_send_sms">
        <action
            android:id="@+id/action_sendSmsFragment_to_sendResultDialogFragment"
            app:destination="@id/sendResultDialogFragment" />
        <action
            android:id="@+id/action_sendSmsFragment_to_userNameDialogFragment"
            app:destination="@id/userNameDialogFragment" />
        <argument
            android:name="isAnonymous"
            android:defaultValue="false"
            app:argType="boolean" />
    </fragment>
    <fragment
        android:id="@+id/readSmsFragment"
        android:name="com.nexters.lettero.presentation.sms.fragment.ReadSmsFragment"
        android:label="fragment_read_Sms"
        tools:layout="@layout/fragment_read_sms" />
    <fragment
        android:id="@+id/settingFragment"
        android:name="com.nexters.lettero.presentation.mypage.fragment.SettingFragment"
        android:label="fragment_read_Sms"
        tools:layout="@layout/fragment_app_setting" />
    <fragment
        android:id="@+id/phoneAuthFragment"
        android:name="com.nexters.lettero.presentation.login.fragment.PhoneAuthFragment"
        android:label="fragment_phone_auth"
        tools:layout="@layout/fragment_phone_auth">
        <action
            android:id="@+id/action_phoneAuthFragment_to_mainFragment"
            app:destination="@id/mainFragment" />
        <action
            android:id="@+id/action_phoneAuthFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>
    <dialog
        android:id="@+id/sendResultDialogFragment"
        android:name="com.nexters.lettero.presentation.sms.dialog.SendResultDialogFragment"
        android:label="SendResultDialogFragment">
        <action
            android:id="@+id/action_sendResultDialogFragment_to_sendSmsFragment"
            app:destination="@id/sendSmsFragment" />
    </dialog>
    <dialog
        android:id="@+id/userNameDialogFragment"
        android:name="com.nexters.lettero.presentation.sms.dialog.UserNameDialogFragment"
        android:label="fragment_user_name_dialog"
        tools:layout="@layout/fragment_user_name_dialog">
        <action
            android:id="@+id/action_userNameDialogFragment_to_sendSmsFragment"
            app:destination="@id/sendSmsFragment" />
    </dialog>
</navigation>
